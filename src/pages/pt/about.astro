---
import BaseLayout from '../../layouts/pt/BaseLayout.astro';

import ContactCTA from '../../components/pt/ContactCTA.astro';
import Hero from '../../components/Hero.astro';
---

<BaseLayout title="About | Jeanine White" description="About Jeanine White Lorem Ipsum">
	<div class="stack gap-20">
		<main class="wrapper about">
			<Hero
				title="Sobre"
				tagline="Muito obrigado pela atenção, leia um pouco mais sobre minha história:"
			>
			</Hero>

			<section>
				<h2 class="section-title">Background</h2>
				<div class="content">
					<p>
					
					</p>
					<p>

					</p>
					<p>

					</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Educação</h2>
				<div class="content">
					<p> Ensino Médio Completo: URI Erechim</p>
					<p> Ensino Superior em progresso: Ciencias da Computação - Universidade Regional Integrada do Alto Uruguai e das Missões</p>
