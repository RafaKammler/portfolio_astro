			<img id="thumb26" class="thumbnail-special" data-pdf-src="/assets/Certificates/Rafael_Gustavo_Kammler.pdf" />
			<img id="thumb2" class="thumbnail-udemy" data-pdf-src="/assets/Certificates/Certificado_QuickSight.pdf" />
			<img id="thumb3" class="thumbnail-udemy" data-pdf-src="/assets/Certificates/Certificado_Docker.pdf" />
			<img id="thumb27" class="thumbnail-udemy" data-pdf-src="/assets/Certificates/Certificado_Pyspakr.pdf" />
			<img id="thumb4" class="thumbnail-udemy" data-pdf-src="/assets/Certificates/Certificado_Git.pdf" />
